<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hihonor.dvkitdemo">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.hihonor.permission.DISTRIBUTED_VIRTUALDEVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dvkitdemo">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DvkitDemoActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden">
        </activity>
        <activity
            android:name=".RegisterCameraAPI2"
            android:exported="true">
        </activity>

        <!-- demo配置测试appid信息，开发者可根据文档指导申请并配置mcs-services.json，不需要在此配置 -->
        <meta-data
            android:name="com.hihonor.hcs.client.appid"
            android:value="220941046" />

    </application>

</manifest>